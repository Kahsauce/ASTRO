# 🚀 Accéder à l'environnement ASTRO
docker exec -it astro_env sh

# 🌍 Démarrer l’API FastAPI
cd /mnt/ASTRO/backend
uvicorn main:app --host 0.0.0.0 --port 8000 --reload

# 🎨 Démarrer le frontend Vite
cd /mnt/ASTRO/astro-frontend
npm run dev

# 📂 Gérer Git
cd /mnt/ASTRO
git status
git add .
git commit -m "Mise à jour du projet ASTRO"

# 🔧 Redémarrer ASTRO
docker stop astro_env
docker start astro_env

# 📂 Vérifier la structure du projet
tree -L 3 /mnt/ASTRO

# Démarrer le conteneur Docker
docker run -dit --network host --name astro_env -v /mnt/user/ASTRO:/mnt/ASTRO astro_env_temp

# Accéder au conteneur Docker
docker exec -it astro_env sh

# Relancer Vite avec l'option --host
npm run dev -- --host

# Vérifier si Vite est accessible
curl -I http://192.168.1.188:5173
